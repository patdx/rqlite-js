{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2020",

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "types": ["node"],
    "declarationMap": true,
    "strict": true,
    "importsNotUsedAsValues": "error"
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*"],
  "files.eol": "\n",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false
}
